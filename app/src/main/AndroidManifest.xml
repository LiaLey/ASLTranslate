<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asl">
    <uses-permission android:name="android.hardware.Camera"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name = "android.hardware.Camera" android:required = "true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_tray_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASL">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".ui.Splash_screen.Splash_screen"
            android:screenOrientation="portrait" />


        <activity
            android:configChanges="orientation"
            android:name=".ui.Home_screen.Home_screen"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen.Topic.Adverbs"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen.Topic.Alphabets"
            android:screenOrientation="portrait" />
        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen.Topic.Attachments"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen.Topic.Numbers"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen.Topic.Pronouns"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.Lesson_screen_description.Lesson_screen_description"
            android:screenOrientation="portrait" />

        <activity
            android:configChanges="orientation"
            android:name=".ui.translator_verify.Translator_verify"
            android:screenOrientation="portrait" />


    </application>

</manifest>